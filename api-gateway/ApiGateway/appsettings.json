{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/gateway-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ]
  },
  "AllowedHosts": "*",
  "Keycloak": {
    "AuthServerUrl": "",
    "Realm": "",
    "Resource": "",
    "Credentials": {
      "Secret": ""
    }
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-direct-categories": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/Categories/{**catch-all}"
        }
      },
      "catalog-direct-categories-exact": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/Categories"
        }
      },
      "catalog-direct-products": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/Products/{**catch-all}"
        }
      },
      "catalog-direct-products-exact": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/Products"
        }
      },
      "catalog-prefixed": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        },
        "Transforms": [
           { "PathPattern": "/api/{catch-all}" }
        ]
      },
      "identity-api": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
           { "PathPattern": "/api/auth/{catch-all}" }
        ]
      },
      "catalog-swagger": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/doc/catalog/{**catch-all}"
        },
        "Transforms": [
           { "PathPattern": "/swagger/v1/{catch-all}" }
        ]
      },
      "identity-swagger": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/doc/identity/{**catch-all}"
        },
        "Transforms": [
           { "PathPattern": "/swagger/v1/{catch-all}" }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://identity-service:8080"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog-service:8080"
          }
        }
      }
    }
  }
}
